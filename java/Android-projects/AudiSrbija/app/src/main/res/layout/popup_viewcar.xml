<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:id="@+id/view_car_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/audi_a6"
        />

    <Button
        android:id="@+id/buton_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back_OK"
        android:layout_below="@+id/view_car_image"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/next_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/view_car_image"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="133dp"
        android:background="@drawable/arrow_right"/>

    <Button
        android:id="@+id/previous_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/next_button"
        android:layout_alignBottom="@+id/next_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/arrow_left"/>

</RelativeLayout>